{
  "name": "laravel-kit",
  "description": "A desktop app for Laravel framework",
  "version": "2.0.6",
  "author": "Tareque Md Hanif <tarequemd.hanif@yahoo.com> (http://tmdh.github.io/)",
  "license": "GPLV2",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev:one": "vite",
    "dev:two": "node build.js --dev && electron .",
    "prod": "vite build && node build.js --prod",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "dependencies": {
    "anser": "2.1.1",
    "electron-store": "8.0.1",
    "electron-updater": "4.6.1",
    "electron-window-state": "^5.0.3",
    "execa": "^5.0.0",
    "monaco-editor": "0.32.0",
    "strip-ansi": "7.0.1",
    "tree-kill": "^1.2.2",
    "vue": "3.2.29",
    "vuex": "4.0.2",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@types/node": "17.0.15",
    "@types/which": "^2.0.1",
    "@vitejs/plugin-vue": "2.1.0",
    "@vue/compiler-sfc": "3.2.29",
    "electron": "17.0.0",
    "electron-builder": "22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "esbuild": "0.14.18",
    "eslint": "8.8.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-vue": "8.4.0",
    "postcss": "8.4.6",
    "prettier": "2.5.1",
    "tailwindcss": "^2.1.4",
    "vite": "2.7.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmdh/laravel-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tmdh/laravel-kit/issues"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "build": {
    "appId": "com.tmdh.laravel-kit",
    "productName": "Laravel Kit",
    "files": [
      "dist/**/*",
      "!node_modules${/*}"
    ],
    "asar": false,
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "./dist/icon.icns",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
